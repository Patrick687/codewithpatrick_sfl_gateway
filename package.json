{
  "name": "sfl-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Survivor Fantasy League microservices",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon --exec ts-node src/index.ts --env-file .env.dev",
    "dev:docker": "docker-compose up --build",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run build && NODE_ENV=development node dist/index.js --env-file .env.dev",
    "start:prod": "npm run build && NODE_ENV=production node dist/index.js --env-file .env.prod",
    "test": "NODE_ENV=test jest --runInBand --env-file .env.test",
    "test:watch": "NODE_ENV=test jest --watch --env-file .env.test",
    "test:coverage": "NODE_ENV=test jest --coverage --env-file .env.test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "gateway",
    "microservices",
    "survivor",
    "fantasy",
    "league"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
